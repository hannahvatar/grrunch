<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>ECharts</title>
    <script src="echarts.js"></script>
  </head>
  <body>
    <div id="main" style="width: 300px;height:260px;"></div>
    <script type="text/javascript">
      var myChart = echarts.init(document.getElementById('main'));
          var option = {
            grid: {
              top: 20,
              bottom: 0,
              left: 10,
              right: 10,
              containLabel: true
            },
            xAxis: {
              type: 'category',
              data: ['Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Today'],
              axisLine: {
                show: true,
                lineStyle: {
                  color: '#000000',
                  width: 1
                }
              },
              axisTick: {
                show: false
              }
            },
            textStyle: {
              fontFamily: 'Open Sans',
              fontSize: 8,
              color: '#000000',
            },
            yAxis: {
              min: 0,
              max: 10,
              interval: 2,
              axisLine: {
                lineStyle: {
                  color: '#000000',
                  width: 2
                }
              },
              splitLine: {
                show: false
              },
              axisLabel: {
                formatter: function(value) {
                  return '$' + value;
                }
              }
            },
            series: [
              {
                data: [4.99, 5.29, 5.49, 7.99, 5.69, 5.99, 2.99],
                type: 'line',
                lineStyle: {
                  color: '#9646FF'
                },
                showSymbol: false,
                symbolSize: 8,
                areaStyle: {
                  color: new echarts.graphic.LinearGradient(0, 0, 0, 1, [
                    {
                      offset: 0,
                      color: 'rgba(150, 70, 255, 0.7)'  // More opaque red at the top
                    },
                    {
                      offset: 1,
                      color: 'rgba(150, 70, 255, 0.1)'  // More transparent red at the bottom
                    }
                  ])
                },
                markPoint: {
                  symbol: 'circle',
                  symbolSize: 8,
                  itemStyle: {
                    color: '#9646FF'
                  },
                  data: [
                    {
                      coord: [6, 2.99]
                    }
                  ]
                }
              }
            ]
          };
      myChart.setOption(option);
    </script>
  </body>
</html>
